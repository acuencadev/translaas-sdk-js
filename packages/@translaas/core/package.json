{
  "name": "@translaas/core",
  "version": "0.2.0",
  "description": "Main package for the Translaas SDK - re-exports all packages",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:copy-cjs",
    "build:esm": "tsc --build tsconfig.json --force",
    "build:cjs": "tsc --build tsconfig.cjs.json",
    "build:copy-cjs": "node ../../../scripts/copy-cjs.js",
    "build:watch": "tsc --build tsconfig.json --watch",
    "clean": "rm -rf dist dist-cjs",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --passWithNoTests"
  },
  "dependencies": {
    "@translaas/models": "*",
    "@translaas/client": "*",
    "@translaas/caching": "*",
    "@translaas/caching-file": "*",
    "@translaas/extensions": "*"
  },
  "keywords": [
    "translaas",
    "translation",
    "i18n",
    "localization",
    "sdk",
    "typescript",
    "javascript"
  ],
  "author": "Translaas SDK Contributors",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
